<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">


  <div class="form">
    <h1>Create your account to apply with <br/> <span style="font-weight: bold; font-family: 'Arial Black', sans-serif; font-size: 25px;">Vanmar Lending</span></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "email address" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
  </div>


