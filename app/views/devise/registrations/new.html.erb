<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
<style>

  html, body {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    margin: 0;
     padding: 0;
  }
  .bg {
    position: relative;
    width: 100%;
    height: 100%;
    background: url(../green-bg.png) center center no-repeat;
    background-size: cover;
  }

    .form {
      float: right;
    }

    .message {
      position: absolute;
      top: 50px;
      left: 50px;
      font-size: 90px;
      font-family: 'Lato', sans-serif;
      font-weight: 300;
      color: white;
      letter-spacing: 3px;
    }

    .home {
      font-size: 110px;
      color: #e7b576;
      font-weight: bold;
    }

    .form {
      width: 400px;
      height: 80%;
      background: rgba(255,255,255,0.3);
      margin-right: 150px;
      margin-top: 70px;
    }

    .form h1 {
      text-align: center;
      font-size: 17px;
      color: white;
      font-family: 'Lato', sans-serif;
      font-weight: 100;
      text-transform: uppercase;
      margin-top: 25px;
    }

    .field {
      display: inline-block;
    }
    .field input[type="email"], .field input[type="password"] {
      border: 1px solid white;
      background: none;
      color: white;
      height: 30px;
      width: 160px;
      margin-left: 20px;
      display: block;
    }


  ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
    color: white;
  }
  ::-moz-placeholder { /* Firefox 19+ */
    color: white;
  }
  :-ms-input-placeholder { /* IE 10+ */
    color: white;
  }
  :-moz-placeholder { /* Firefox 18- */
    color: white;
  }


</style>
<div class="bg">



<h1 class="message">THEREâ€™S NO <br/>  PLACE LIKE <br/> <span class="home">HOME</span></h1>

  <div class="form">
    <h1>Create your account to apply with <br/> <span style="font-weight: bold; font-family: 'Arial Black', sans-serif; font-size: 25px;">Vanmar Lending</span></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "email address" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
  </div>

</div>

