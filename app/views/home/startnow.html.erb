<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<style>
  /* ---- reset ---- */

  body {
    margin: 0;
    font:normal 75% Arial, Helvetica, sans-serif;
  }

  canvas {
    display: block;
    vertical-align: bottom;
  }
  @media only screen and (max-width: 900px) {

      .content p {
        margin-left: 10px !important;
        margin-right: 10px !important;
      }

  }


  /* ---- particles.js container ---- */

  #particles-js {
    position: fixed;
    width: 100%;
    height: 100%;
    background: url("http://thehustle.life/wp-content/uploads/2015/10/CTV-Blog-18-Image.jpg");
    background-repeat: no-repeat;
    background-size: cover;

  }

  .content {
    position: absolute;
    top:0;
    left:0;
    z-index: 9999999999;

    text-align: center;
  }

  .content h1 {
    color: black;
    font-size:60px;
    margin-top: 100px;
    opacity: 0.5;

  }

  .content p {
    color:black;
    padding-bottom: 10px;
    font-size:20px;
    margin-left: 200px;
    margin-right: 200px;
    line-height: 28px;
  }

  .box {
    width:400px;
    height: 300px;
    background:white;
    display: inline-block;
    background: url(https://www.harpermedia.ca/wp-content/uploads/2014/02/business-people.jpg) center center no-repeat;
    background-size:cover;
    box-shadow: 0 2px 5px 1px rgba(5, 5, 5, 0.4);
    margin-left: 10px;
    position: relative;
    margin-top: 10px;
    transition: all 300ms ease-in-out;
  }

  .box-content {
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,0.8);
    opacity: 0;
    transition: all 400ms ease-in-out;

  }

  .box-content h1 {
    font-size: 30px;
    text-align:left;
    margin-left: 30px;
    margin-top: 50px;
  }

  .box-content p {
    margin-left: 30px;
    margin-right: 30px;
    text-align:left;
    line-height: 26px;
    font-size:16px;
  }

  .box-content button {
    width:200px;
    height: 50px;
    color:white;
    text-transform: uppercase;
    background: rgba(50,50,255,1);
    border: none;

    border-radius: .4em;
    font-weight: bold;
  }

  .box:hover .box-content {
    opacity: 1;
  }

  .box:hover {
    transform: scale(1.1);
    z-index: 999999999999;
  }

  .boxes {
    text-align: center;
    width: 100%;
  }

  .main-text {
    margin-left: 150px;
    margin-right: 150px;
  }

  /* ---- stats.js ---- */



    .menu-trigger {
      z-index: 999999999999999999999;
      color:black !important;
    }
</style>

